<?xml version="1.0" encoding="utf-8"?>
<com.yale.qcxxandroid.base.ScrollLinerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/headimg"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_gravity="center"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:onClick="userDetail"
        android:src="@drawable/xiuxiuban2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/name"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_marginRight="15dip"
                android:layout_toLeftOf="@+id/reply"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reply"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:onClick="replyClick"
                android:text="@string/reply"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dzt"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:onClick="dztClick"
                android:text="@string/dzt"
                android:textColor="@color/greener"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dp"
            android:minHeight="100dp"
            android:text=".................."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/delete_action"
        android:layout_width="@dimen/delete_action_len"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@color/red"
        android:drawableLeft="@drawable/pop_up_del"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="#a3a3a3" />

</com.yale.qcxxandroid.base.ScrollLinerLayout>