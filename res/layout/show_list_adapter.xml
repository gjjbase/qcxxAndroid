<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cmtCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="left"
            android:text="拉克涉及到房间"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="11/23"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="250dip"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="250dip"
            android:orientation="horizontal" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="fill_parent"
                android:layout_height="260dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_toper"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|left"
                android:scaleType="centerCrop"
                android:src="@drawable/show3" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:layout_toRightOf="@id/img_toper"
                android:paddingLeft="5dp" >

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:alpha="0.6"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/txt_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingRight="5dp"
                    android:text="122"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_top"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/txt_top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_huifu" />

                <TextView
                    android:id="@+id/txt2_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/img_top"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="122"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_lefttop"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/txt2_top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_zan" />

                <TextView
                    android:id="@+id/txt2_toper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/img_lefttop"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="122"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_lefttoper"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/txt2_toper"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_chakan" />
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom" >

                <ImageView
                    android:id="@+id/img_let"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/man" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/img_let" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignLeft="@id/name"
                        android:alpha="0.6"
                        android:src="@color/white" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/age"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="陈璐"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/schoolName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="武汉大学"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/xz"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toLeftOf="@id/schoolName"
                        android:gravity="center"
                        android:text="白羊座"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_toLeftOf="@id/xz"
                        android:gravity="center"
                        android:text="19岁"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/white" >

            <TextView
                android:id="@+id/nc"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/repl"
                android:gravity="center"
                android:text="邱金勇 武汉工程大学"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cmttime"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/nc"
                android:gravity="right|center"
                android:text="15/11/12"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/repl"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:onClick="commentDetail"
                android:src="@drawable/xiuxiuban4" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/click_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:text="不错嘛"
            android:textColor="@color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_weight="9"
            android:textColor="@color/black"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mbtn"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="18.0sp" />
    </LinearLayout>

</LinearLayout>